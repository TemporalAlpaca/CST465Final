@model CST465_Final.Models.PirateModel
@{
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}
@section navBar{
    <!DOCTYPE HTML>

    <html lang="en">

    <head>
        <link rel="stylesheet" href="~/DefaultStyles.css" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
              crossorigin="anonymous">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.1/jquery.validate.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.6/jquery.validate.unobtrusive.js"></script>
        <title>Create a Pirate</title>
    </head>
}
@section body{
    <body>
        <div>
            <b>Create a Pirate:</b>
        </div>
        <form class="form-group" method="post" asp-action="Insert" asp-controller="Pirate">
            @Html.AntiForgeryToken()
            <div>
                @Html.LabelFor(m => m.name)
                @Html.EditorFor(m => m.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.name)
            </div>

            <div>
                @Html.LabelFor(m => m.beardColor)
                @Html.EditorFor(m => m.beardColor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.beardColor)
            </div>

            <div>
                @Html.LabelFor(m => m.catchPhrase)
                @Html.TextAreaFor(m => m.catchPhrase, new {  @class = "form-control", @rows = 3 })
                @Html.ValidationMessageFor(m => m.catchPhrase)
            </div>

            <div>
                @Html.LabelFor(m => m.numLegs)
                @Html.EditorFor(m => m.numLegs, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.numLegs)
            </div>

            <div>
                @Html.LabelFor(m => m.hasHat)
                @Html.CheckBoxFor(m => m.hasHat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.hasHat)
            </div>

            <div>
                @Html.LabelFor(m => m.hasEyepatch)
                @Html.CheckBoxFor(m => m.hasEyepatch, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.hasEyepatch)
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </body>
}
